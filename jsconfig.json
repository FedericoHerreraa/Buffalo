{
    "compilerOptions": {
      "allowJs": true,
      "checkJs": false,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "./src/*"
        ]
      },
      "jsx": "react-jsx",
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["./src"]
  }